<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.juborajsarker.agecalculator.fragment.AgeCalculatorFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/layout_background_design"
            android:paddingBottom="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:paddingTop="8dp"
            android:elevation="4dp">



            <TextView
                android:id="@+id/main_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Date of Birth"
                android:textColor="#fff"
                android:gravity="center"
                android:textSize="20sp"
                android:padding="10dp"
                android:textStyle="bold"
                android:background="#0d7079"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/colorPrimary"
                android:paddingBottom="15dp"
                android:paddingTop="15dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Date"
                        android:textStyle="bold"
                        android:layout_marginLeft="2dp"
                        android:textColor="#fff"
                        android:padding="5dp"/>

                    <Spinner
                        android:id="@+id/select_dates"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:entries="@array/select_dates"
                        android:background="#fff"
                        android:textAlignment="center"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp">


                    </Spinner>

                </LinearLayout>







                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:padding="5dp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:text="Select Month" />

                    <Spinner
                        android:id="@+id/select_months"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:entries="@array/select_months"
                        android:background="#fff"
                        android:textAlignment="center"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp">


                    </Spinner>



                </LinearLayout>




                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enter Year"
                        android:textColor="#fff"
                        android:textStyle="bold"
                        android:layout_marginLeft="2dp"
                        android:padding="5dp"/>


                    <EditText
                        android:id="@+id/edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:hint="Enter Year"
                        android:maxLines="1"
                        android:maxLength="4"
                        android:textSize="16sp"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:inputType="number"
                        android:textAlignment="center"
                        android:background="#fff"/>



                </LinearLayout>






            </LinearLayout>

            <Button
                android:id="@+id/button_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@color/colorPrimary"/>


        </LinearLayout>






    </LinearLayout>





</LinearLayout>
